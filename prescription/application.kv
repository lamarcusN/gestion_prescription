<MyButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: 0, 51, 255
    border_radius: [18]
    bold: True
    canvas.before:
        Color:
            rgb: 0, 0, 0
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius



<MainWondaw>:
    name: "main"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: root.size
            pos: root.pos

    # Nombre de section de l'interface principal
    GridLayout:
        rows: 4
        orientation: 'horizontal'
        FloatLayout:
            Button:
                size_hint: .18, .80
                pos_hint:{'x': .05, 'top':.9}
                background_normal: '/home/hunter/Documents/FACULTE/SEMESTRE-VI/ProjetAnnuel/prescription/image/sac_medical.jpg'
                background_down: ''

            Label:
                text: " [color=#000000][b]Hunter-[/b]Santé[/color] "
                pos_hint:{'x': .01, 'top':.85}
                font_size: '30sp'
                #size_hint: .40, .80
                markup: True
                #underline: True


            MyButton:
                pos_hint:{'x': .8, 'top':.6}
                size_hint: .15, .25
                text: "s'identifier"
                text_color: 0, 51, 255, 0.2
                #on_press: root.connect()



        Label:
            halign: 'right'
            text: "[color=#000000][b]Hunter-[/b]Santé[/color] Pour vos préscription à la minute"
            color: 0, 0, 0
            markup: True

        FloatLayout:
            pos: 10, 50
            MyButton:
                border_radius: [14]
                pos_hint:{'x': .2, 'top':.6}
                size_hint: .25, .35
                text: 'Se renseigner'
                font_size: 22

            MyButton:
                border_radius: [12]
                pos_hint:{'x': .6, 'top':.6}
                size_hint: .25, .35
                text: 'Prescrire'
                font_size: 22
                id: presc
                on_press: app.root.current = "indentification"

        BoxLayout:
            Label:
                text: "[color=#000000][b]Hunter-[/b]Santé[/color] A votre service"
                color: 0, 0, 0
                font_size: 24
                markup: True

<Identification>:
    name: "indentification"
    FloatLayout:
        Label:
            text: "Vous êtes médecin d'un hôpital ??"
            pos_hint:{'x': .01, 'top':1.35}
            font_size: '30sp'

        Label:
            text: "Entrez vos identifiants svp"
            font_size: '20sp'
            pos_hint:{'x': .01, 'top':1.25}
        TextInput:
            id: input
            hint_text:'Indentifiant'
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            size_hint: 0.30, 0.07
            multiline : False

        TextInput:
            id: input1
            hint_text:'Mot de passe'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.30, 0.07
            multiline : False
            password:True
            password_mask : "*"

        Button:
            background_color: (0, 0, 0, 0)
            background_normal: ''
            back_color: 0.12, 30, 0.5
            border_radius: [14]


            pos_hint:{'x': .35, 'top':.4}
            size_hint: .30, .09
            text: 'Valider'
            font_size: 22
            bold: True

            on_press: app.root.current = "renseignementPatient"

            canvas.before:
                Color:
                    rgb: self.back_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: self.border_radius

