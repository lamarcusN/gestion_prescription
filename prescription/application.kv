<Face>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: root.size
            pos: root.pos

    # Nombre de section de l'interface principal
    rows: 4
    orientation: 'horizontal'

    FloatLayout:
        Button:
            size_hint: .18, .80
            pos_hint:{'x': .05, 'top':.9}
            background_normal: '/home/hunter/Documents/PAGE_WEB/Sécurité /sac_medical.jpg'
            background_down: ''

        Label:
            text: "[color=#000000][b]Hunter-[/b]Santé[/color]"
            pos_hint:{'x': .01, 'top':.85}
            font_size: '30sp'
            #size_hint: .40, .80
            markup: True
            #underline: True


        Button:
            background_color: (0, 0, 0, 0)
            background_normal: ''
            back_color: 0, 51, 255
            border_radius: [18]
            pos_hint:{'x': .8, 'top':.6}
            size_hint: .15, .25
            text: "s'identifier"
            text_color: 0, 51, 255, 0.2
            on_press: root.connect()
            canvas.before:
                Color:
                    rgb: 0, 0, 0
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: self.border_radius



    Label:
        halign: 'right'
        text: "[color=#000000][b]Hunter-[/b]Santé[/color] Pour vos préscription à la minute"
        color: 0, 0, 0
        markup: True

    FloatLayout:
        pos: 10, 50
        Button:
            background_color: (0, 0, 0, 0)
            background_normal: ''
            back_color: 0.12, 30, 0.5
            border_radius: [14]


            pos_hint:{'x': .2, 'top':.6}
            size_hint: .25, .35
            text: 'Se renseigner'
            font_size: 22
            bold: True

            canvas.before:
                Color:
                    rgb: self.back_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: self.border_radius

        Button:

            background_color: (0, 0, 0, 0)
            background_normal: ''
            back_color: 0.12, 30, 0.5
            border_radius: [12]

            pos_hint:{'x': .6, 'top':.6}
            size_hint: .25, .35
            text: 'Prescrire'
            font_size: 22
            bold: True

            #on_press: print("BUT {}".format(self.text))

            canvas.before:
                Color:
                    rgb: self.back_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: self.border_radius

    BoxLayout:
        Label:
            text: "[color=#000000][b]Hunter-[/b]Santé[/color] A votre service"
            color: 0, 0, 0
            font_size: 24
            markup: True

<Connexion>:

    FloatLayout:
        pos : root.pos
        TextInput:
            id: input
            hint_text:'Indentifiant'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: 0.5, 0.12
            multiline : False

        TextInput:
            id: input
            hint_text:'Mot de passe'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.5, 0.12
            multiline : False
            password:True
            password_mask : "*"



    Button:
        background_color: (0, 0, 0, 0)
        background_normal: ''
        back_color: 0.12, 30, 0.5
        border_radius: [14]


        pos_hint:{'x': .25, 'top':.3}
        size_hint: .50, .15
        text: 'Valider'
        font_size: 22
        bold: True

        on_press:

        canvas.before:
            Color:
                rgb: self.back_color
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: self.border_radius